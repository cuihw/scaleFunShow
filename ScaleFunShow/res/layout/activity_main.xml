<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.scalefunshow.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:background="#FFFFFF" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="#FFFFFF"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_marginBottom="1dp"
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:background="#113355"
                android:orientation="horizontal" >

                <LinearLayout
                    android:background="#113355"
                    android:layout_weight="1"                    
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/tv_weightflg"
                        android:gravity="right|bottom"
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gross" />

                    <CheckBox
                        android:layout_weight="1"
                        android:id="@+id/cb_zero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="zero" />

                   <CheckBox
                       	android:layout_weight="1"
                        android:id="@+id/cb_stab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="stab" />

                </LinearLayout>
                
                <LinearLayout                 
                    android:background="#113355"
                    android:layout_weight="20"
                    android:paddingRight="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_weight="2"
                        android:id="@+id/tv_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="right|bottom"
                        android:textColor="#ffffff"
                        android:textSize="90sp"
                        android:text="0" />

                    <TextView
                        android:layout_weight="0"
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="right|bottom"
                        android:textColor="#ffffff"
                        android:textSize="30sp"
                        android:text="kg" />

                </LinearLayout>

            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:stretchColumns="*"
                android:background="#113355" >

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#113355" >

                    <LinearLayout
                        android:padding="5dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#113355"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mode" />

                       <Spinner
                            android:layout_weight="2"
                            android:id="@+id/sp_mode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:padding="5dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#113355"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/textView1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Deci" />

                        <Spinner
                            android:layout_weight="2"
                            android:id="@+id/sp_deci"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:padding="5dp"                       
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#113355"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="A Zero" />

                        <Spinner
                            android:layout_weight="2"
                            android:id="@+id/sp_azero"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:padding="5dp"                      
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#113355"
                        android:orientation="vertical" >

          				<Button
                        	android:id="@+id/btn_default"
	                        android:layout_width="match_parent"
	                        android:layout_height="match_parent"
	                        android:layout_weight="1"
	                        android:text="默认" />
                    </LinearLayout>
          
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <LinearLayout
                        android:padding="5dp"
                        android:background="#113355"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:focusable="true"  
   						android:focusableInTouchMode="true"
                        android:orientation="vertical" >
                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/tv_cap1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cap" />
                       	<EditText
					        android:layout_weight="2"
					        android:id="@+id/et_cap1"
					        android:layout_width="match_parent"
					        android:layout_height="wrap_content"
					        android:imeOptions="actionDone"					        
					        android:inputType="number" >					        
					        <requestFocus />
					    </EditText>
                    </LinearLayout>

                    <LinearLayout
	                    android:padding="5dp"
                        android:background="#113355"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Fdn" />
                       <Spinner
                            android:layout_weight="2"
                            android:id="@+id/sp_div1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:padding="5dp"
                        android:background="#113355"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/textView6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="M Zero" />
                       <Spinner
                            android:layout_weight="2"
                            android:id="@+id/sp_mzero"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:padding="5dp"
                        android:background="#113355"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <Button
                            android:id="@+id/btn_rj45"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Rj45" />
                    </LinearLayout>
                </TableRow>

                <TableRow              
                    android:id="@+id/tableRow3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <LinearLayout 
                        android:padding="5dp"                      
                        android:background="#113355"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/tv_cap2"
                            android:visibility="visible"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="MidFull" />
                       	<EditText
					        android:layout_weight="2"
					        android:id="@+id/et_cap2"
					        android:visibility="visible"
					        android:layout_width="match_parent"
					        android:layout_height="wrap_content"
					        android:imeOptions="actionDone"
					        android:inputType="number" >
					        <requestFocus />
					    </EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:padding="5dp" 
                        android:background="#113355"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/tv_div2"
                            android:visibility="visible"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="BigFdn" />
                       <Spinner
                            android:layout_weight="2"
                            android:id="@+id/sp_div2"
                            android:visibility="visible"
                            android:layout_width="match_parent"                            
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:padding="5dp" 
                        android:background="#113355"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/textView9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Z Track" />

                        <Spinner
                            android:layout_weight="2"
                            android:id="@+id/sp_ztrack"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:padding="5dp" 
                        android:background="#113355"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <Button
                            android:id="@+id/btn_1rs232"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="1Rs232" />

                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:id="@+id/tableRow4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"  
                    android:focusable="true" 
                    android:focusableInTouchMode="true"                  
                    android:layout_weight="1" >

                    <LinearLayout
                        android:padding="5dp" 
                        android:layout_weight="1"
                        android:background="#113355"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"                                                                  
                        android:orientation="vertical" >

                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/textView17"
                            android:textColor="#113355"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"  
                            android:text="cal" />

                        <Button
                            android:layout_weight="2"
                            android:id="@+id/btn_cal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="校正" />
                    </LinearLayout>

                    <LinearLayout
                        android:padding="5dp" 
                        android:layout_weight="1"
                        android:background="#113355"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:focusable="true"  
   						android:focusableInTouchMode="true"
                        android:orientation="vertical" >
					    <TextView
							android:layout_weight="1"
							android:id="@+id/textView37"
							android:textColor="#113355"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"  
							android:text="cal" />
					    <EditText
					        android:layout_weight="2"
					        android:id="@+id/et_calload"
					        android:layout_width="match_parent"
					        android:layout_height="wrap_content"
					        android:imeOptions="actionDone"
					        android:inputType="number" >
					        <requestFocus />
					    </EditText>
                    </LinearLayout>
                                                        
                    <LinearLayout
                        android:padding="5dp" 
                        android:background="#113355"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >
                    </LinearLayout>                          

                    <LinearLayout
                        android:padding="5dp" 
                        android:layout_weight="1"
                        android:background="#113355"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <Button
                            android:id="@+id/btn_2rs232"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="2Rs232" />

                    </LinearLayout>
                                      
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
                </TableRow>

            </TableLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="1dp"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#113355"
            android:orientation="vertical"
            android:paddingBottom="30dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="30dp" >

            <Button
                android:id="@+id/btn_print"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="打印"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:textColor="#113355"
                android:text="TextView" />

            <Button
                android:id="@+id/btn_opencashdraw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="开钱箱"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:textColor="#113355"
                android:text="TextView" />

            <Button
                android:id="@+id/btn_tare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="扣重"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:textColor="#113355"
                android:text="TextView" />

            <Button
                android:id="@+id/btn_zero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="归零"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>